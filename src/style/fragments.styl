// 公用代码块
$flex = @block {
  display flex
  align-items center
  justify-content center
}

$textHideLine1 = @block {
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
}

$textHideLine2 = @block {
  text-overflow ellipsis
  display -webkit-box
  overflow hidden
  -webkit-box-orient vertical //子元素应该被水平或垂直排列
  -webkit-line-clamp 2  //3行后显示省略号
}
